<div class="jumbotron d-flex align-items-center min-vh-100 bg-dark">
<div class="container-fluid p-3 my-3 text-white">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

 <div class="row justify-content-md-center">
  <div class="panel panel-primary">
   <div class="panel-body">
    <form>
      <div class="form-group">
          <h2 class="mb-3 text-center">Sign up</h2>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="control-group">
        <%= f.label :name, class:"control-label" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Your Name" %>
      </div>
      
      <div class="control-group">
        <%= f.label :email, class:"control-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter Your Email here" %>
      </div>

      <div class="control-group">
        <%= f.label :password, class:"control-label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Enter Password Here" %>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, class:"control-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Re-enter Password Here" %>
      </div>

      <div class="control-group">
        <%= f.label :role_id %><br>
          <% @buyer_role = Role.find_by(name: "Buyer") %>
          <% @broker_role = Role.find_by(name: "Broker") %>   
        <%= f.select :role_id, options_for_select([[@broker_role.name, @broker_role.id], [@buyer_role.name, @buyer_role.id]]) %>
      </div>
      </br>
      <div class="control-group">
        <div class="controls">
        <%= f.submit "Sign up", class: "btn btn-info btn-block" %>
      </div>
      </br>
      <p class="form-group"> By Creating an iEX account, you agree to our <a href="#">Terms of Use</a></p>
          <hr>
          <p></p>Already have an iEX account? <%= render "devise/shared/links" %> </p>
    </form>
   </div>
  </div>  
<% end %>
</div>
</div>
